<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="md.leonis.dreambeam.view.ViewPaneController">
    <center>
        <BorderPane BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <top>
                <HBox BorderPane.alignment="CENTER">
                    <HBox prefWidth="150.0" BorderPane.alignment="CENTER">
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonClick" text="&lt;&lt; Back" />
                    </HBox>
                    <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" />
                        </padding>
                        <StackPane>
                            <Button fx:id="scanButton" mnemonicParsing="false" onAction="#scanButtonClick" prefWidth="190.0" text="Scan &amp; Identity" />
                            <Button fx:id="breakButton" mnemonicParsing="false" onAction="#breakButtonClick" prefWidth="150.0" text="Break" visible="false" />
                        </StackPane>
                    </HBox>
                    <HBox alignment="CENTER" prefWidth="150.0" spacing="5.0" BorderPane.alignment="CENTER">
                        <Label text="Scan Time:">
                            <padding>
                                <Insets bottom="4.0" />
                            </padding>
                        </Label>
                        <Label fx:id="timeLabel" text="00:00">
                            <padding>
                                <Insets bottom="4.0" />
                            </padding>
                        </Label>
                    </HBox>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </HBox>
            </top>
            <center>
                <ListView fx:id="filesListView" BorderPane.alignment="CENTER" />
            </center>
         <bottom>
             <VBox fx:id="progressVBox" alignment="CENTER" prefHeight="62.0" prefWidth="630.0" spacing="5.0" BorderPane.alignment="CENTER">
                 <StackPane>
                     <ProgressBar fx:id="fileProgressBar" prefHeight="22.0" prefWidth="600.0" progress="0.0"/>
                     <Label fx:id="fileProgressLabel" text="\%" textFill="#00000096"/>
                 </StackPane>
                 <StackPane>
                     <ProgressBar fx:id="totalProgressBar" prefHeight="22.0" prefWidth="600.0" progress="0.0"/>
                     <Label fx:id="totalProgressLabel" text="\%" textFill="#00000096"/>
                 </StackPane>
             </VBox>
         </bottom>
        </BorderPane>
    </center>
</BorderPane>
